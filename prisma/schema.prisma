// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id             String          @id
  title          String
  thumbnail      String
  channelId      String
  description    String
  liveStatus     String
  uploadStatus   String
  privacyStatus  String
  updatedAt      DateTime        @updatedAt
  publishedAt    DateTime        @db.Timestamptz
  scheduledAt    DateTime?       @db.Timestamptz
  startAt        DateTime?       @db.Timestamptz
  endAt          DateTime?       @db.Timestamptz
  duration       Int?
  Channel        Channel         @relation(references: [id], fields: [channelId], onDelete: Cascade)
  Collaborations Collaboration[]
}

model Channel {
  id             String          @id
  title          String
  thumbnail      String
  Videos         Video[]
  Collaborations Collaboration[]
}

model Collaboration {
  videoId   String
  channelId String
  Video     Video   @relation(fields: [videoId], references: [id], onDelete: Cascade)
  Channel   Channel @relation(fields: [channelId], references: [id])

  @@id([videoId, channelId])
}
